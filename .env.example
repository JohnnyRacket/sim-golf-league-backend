# ── Server ──────────────────────────────────────────────
NODE_ENV=development
PORT=3000

# ── Database ────────────────────────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=golf_sim_league
DB_POOL_MAX=10

# ── Authentication (better-auth) ───────────────────────
# Required in production — generates a strong random secret:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
BETTER_AUTH_SECRET=
BETTER_AUTH_URL=http://localhost:3000

# ── CORS ────────────────────────────────────────────────
# Comma-separated list of allowed origins (required in production)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ── OAuth providers (optional) ─────────────────────────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=

# ── Email ───────────────────────────────────────────────
# Provider: 'ses' (production) or 'console' (dev — logs to stdout)
EMAIL_PROVIDER=console
SES_FROM_EMAIL=noreply@golfsimleague.com
AWS_REGION=us-east-1
